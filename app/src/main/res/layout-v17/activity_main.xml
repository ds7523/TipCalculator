<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ds7523.truman.edu.tipcalculator.MainActivity"
    android:textAlignment="center"
    android:longClickable="true">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/tip_calculator_instruction"
        android:textAlignment="center"
        android:id="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/inputAmount"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:textStyle="bold|normal"
        android:textAlignment="center"
        android:numeric="decimal"
        android:hint="@string/enter_total_amount" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="9"
        android:id="@+id/calculatedTip"
        android:hint="@string/calculated_tip_amount"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/tip30Percent"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_large_material"
        android:editable="false"
        android:elegantTextHeight="true"
        android:backgroundTint="@color/abc_color_highlight_material" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fifteen_percent"
        android:id="@+id/tip15Percent"
        android:layout_below="@+id/inputAmount"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/eightteen_percent"
        android:id="@+id/tip18Percent"
        android:layout_below="@+id/tip15Percent"
        android:layout_alignLeft="@+id/tip15Percent"
        android:layout_alignStart="@+id/tip15Percent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/twenty_percent"
        android:id="@+id/tip20Percent"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/tip18Percent"
        android:layout_alignStart="@+id/tip18Percent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/twentyFive_percent"
        android:id="@+id/tip25Percent"
        android:layout_below="@+id/tip20Percent"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/thirty_percent"
        android:id="@+id/tip30Percent"
        android:layout_below="@+id/tip25Percent"
        android:layout_alignLeft="@+id/tip25Percent"
        android:layout_alignStart="@+id/tip25Percent" />


</RelativeLayout>
